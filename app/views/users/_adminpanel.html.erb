<h2 class="title-green">LISTA DE USUARIOS <i class="fas fa-angle-down"></i></h2>
<div class="user-table">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>N</th>
        <th>Usuario</th>
        <th>Creado</th>
        <th>Eliminar</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do | user, index| %>
      <% users = index + 1 %>
      <tr>
        <th scope="row"><%= users %></th>
        <td><%= user.email %></td>
        <td><%= user.created_at.in_time_zone("Buenos Aires").strftime('%d/%m/%Y a las %H:%m') %></td>
        <td> <%= link_to 'Eliminar Usuario',  user,  method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-block' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
</div>
