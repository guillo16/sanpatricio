<%= render 'shared/main_navbar' %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(https://res.cloudinary.com/dw7ox75dg/image/upload/v1585588869/Captura_de_Pantalla_2020-03-30_a_la_s_14.17.33.png);">
  <div class="banner-container">
    <img src="https://res.cloudinary.com/dw7ox75dg/image/upload/v1585139240/unnamed.png" alt="">
    <h2>Colegio <strong>SAN PATRICIO</strong> </h2>
    <p>Fundado en 1976</p>
  </div>
</div>
<section id="articles">
  <div class="home-container">
    <h3>NOVEDADES</h3>
    <h5>Las ultimas noticias del colegio <i class="fas fa-caret-down"></i></h5>
    <div class="articles-wrapper">
      <div class="articles-main-container">
        <div class="main-article">
          <% @articles.last(1).each do |article| %>
          <%= render 'cards/main_article_cards', article: article %>
          <% end %>
        </div>
        <div class="main-article">
          <% @articles.last(2).reverse.drop(1).each do |article| %>
          <%= render 'cards/second_article_cards', article: article %>
          <% end %>
        </div>
        <div class="main-article">
          <% @articles.last(3).reverse.drop(2).each do |article| %>
          <%= render 'cards/second_article_cards', article: article %>
          <% end %>
        </div>
      </div>
      <div class="articles-container">
        <% @articles.last(6).reverse.drop(3).each do |article| %>
        <%= render 'cards/third_article_cards', article: article %>
        <% end %>
      </div>
    </div>
    <div class="article-button">
      <%= link_to 'Todas las noticias', articles_path, class: "btn-article"  %>
    </div>
  </div>
</section>
<section id="ib">
  <%= render 'shared/ib' %>
</section>
<section id="events">
  <div class="home-container">
    <h3>CALENDARIO</h3>
    <h5>Los proximos eventos del colegio <i class="fas fa-caret-down"></i></h5>
    <div class="event-container-home">
      <% @events.each do |event| %>
      <%= render 'cards/event_main_cards', event: event %>
      <% end %>
    </div>
    <div class="article-button">
      <%= link_to 'Todos los eventos', events_path, class: "btn-article"  %>
    </div>
  </div>
</section>
<section id="social">
  <%= render 'shared/social' %>
</section>
<section>
  <div class="text-center">
    <p style="color: #F4F4F4;">p</p>
  </div>
</section>
