<%= render 'shared/main_navbar' %>
<div class="post-admin-container pt-5 pb-5">
  <div class="d-flex justify-content-between align-items-center">
    <h2>Categorias de notificaciones</h2>
    <%= link_to 'Crear categoria', new_category_path, class: "btn btn-primary" %>
  </div>
  <table class="table table-striped table-dark mt-5 mb-5">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Categorias</th>
        <th scope="col">Fecha</th>
        <th scope="col">Ver</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.created_at.strftime(' %d/%m/%y') %></td>
        <td><%= link_to 'Ver', category_path(category) %></td>
        <td class="text-right">
          <%= link_to 'Editar', edit_category_path(category), class: "btn btn-sm btn-warning mr-3" %>
          <%= link_to 'Eliminar', category_path(category), method: :delete, data: { confirm: 'Estas seguro que quieres destruir categoria?' } , class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
