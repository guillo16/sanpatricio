<%= render 'shared/navbar' %>
<div class="container pt-5 mt-5 bg-white p-5 pb-5 mb-5">
  <h2 class="font-weight-bold text-center">Crear notificación para padres</h2>
  <%= simple_form_for (@post) do |f| %>
  <%= f.input :title, input_html: { class: "form-control-lg form-control"} %>
    <%= f.input :content, input_html: { class: "form-control-lg form-control", id:"exampleFormControlTextarea1", rows:"5"} %>
    <%= f.input :url, input_html: { class: "form-control-lg form-control"} %>
    <%= f.association :category, input_html: { class: "form-control-lg form-control"} %>
  <%= f.submit 'Crear notificación', class: "btn btn-primary btn-block mb-3" %>
  <div class="text-right pt-3">
    <%= link_to 'Volver', user_path(current_user), class: "btn btn-secondary" %>
  </div>
  <% end %>
</div>
