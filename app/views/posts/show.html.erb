<%= render 'shared/main_navbar' %>
<div class="post-show-wrapper">
  <h1 class="title-green text-center"><%= @post.category.title %></h1>
  <div class="post-show-container">
    <h2><%= @post.title %></h2>
    <h4><i class="fas fa-calendar-alt"></i> <%= @post.created_at.strftime(' %d/%m/%y') %></h4>
    <p><%= @post.content %></p>
    <br>
    <a href="<%= @post.url %>" target="_blank"><%= @post.url %></a>
  </div>
     <div class="text-center">
      <%= link_to 'Atras', :back, class: 'btn-article' %>
    </div>
</div>
