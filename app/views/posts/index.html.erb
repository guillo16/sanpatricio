<%= render 'shared/main_navbar' %>
<% if current_user.admin? %>
<div class="post-admin-container">
  <table class="table table-striped table-dark">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Notificaciones</th>
        <th scope="col">Fecha</th>
        <th scope="col">Ver</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at.strftime(' %d/%m/%y') %></td>
        <td><%= link_to 'Ver Notificacion', post_path(post) %></td>
        <td><%= link_to 'Eliminar Notificacion', '#' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
<%= render 'shared/denied' %>
<% end %>

