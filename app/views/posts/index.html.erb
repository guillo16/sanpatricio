<%= render 'shared/main_navbar' %>
<% if current_user.admin? %>
<div class="post-admin-container">
  <h2>Notificaciones</h2>
  <table class="table table-striped table-dark">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Notificaciones</th>
        <th scope="col">Fecha</th>
        <th scope="col">Ver</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at.strftime(' %d/%m/%y') %></td>
        <td><%= link_to 'Ver', post_path(post) %></td>
        <td><%= link_to 'Eliminar',  post,  method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-block' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
<div class="articles-navbar">
  <h2>NOTIFICACIONES</h2>
</div>
<div class="post-index-container">
  <h2>Todas</h2>
  <% @posts.each do |post| %>
  <h3><%= post.category.title %> </h3>
  <div class="post-cards">
   <%= link_to post_path(post) do %>
   <div class="post-card-title">
     <h1><%= post.title.truncate(80) %></h1>
     <p><%= post.created_at.strftime(' %d/%m/%y') %></p>
   </div>
   <div class="post-card-content">
    <p><%= post.content %></p>
  </div>
  <% end %>
</div>
<% end %>
</div>
<div class="text-center p-5">
  <%= link_to 'Atras', user_path(current_user), class: 'btn-article'  %>
</div>
<% end %>

