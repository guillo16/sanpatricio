<%= render 'shared/main_navbar' %>
<div class="post-container">
  <h1>Crear notificacion para padres</h1>
  <div class="form-container">
    <%= simple_form_for (@post) do |f| %>
    <h3>Titulo<strong style="color:red; font-size: 16px;">*</strong></h3>
    <%= f.input :title, input_html: { class: "form-control-lg form-control"}, label: false %>
    <h3>Contenido<strong style="color:red; font-size: 16px;">*</strong></h3>
    <%= f.input :content, input_html: { class: "form-control-lg form-control", rows:"5"}, label: false %>
    <h3>Categoria<strong style="color:red; font-size: 16px;">*</strong></h3>
    <%= f.association :category, input_html: { class: "form-control-lg form-control"}, label: false %>

    <%= f.submit class:"btn btn-primary btn-lg btn-block" %>
    <% end %>
  </div>

</div>


