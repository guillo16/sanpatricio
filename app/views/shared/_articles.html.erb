<div class="home-container">
  <div class="py-5 my-md-5 text-center">
    <h2 class="font-weight-bold">Novedades</h2>
    <h4>Las últimas noticias del colegio</h4>
  </div>
  <div class="article-container">
    <% @articles.take(6).each do |article| %>
    <%= render 'cards/article_card', article: article %>
    <% end %>
  </div>
  <div class="pt-4 mt-4 mb-5 pb-5 text-center">
    <%= link_to 'Más Noticias', articles_path, class: "btn-article"  %>
  </div>
</div>
