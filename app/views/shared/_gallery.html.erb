<%= gallery.title %>
<div class="d-flex">
  <% gallery.photos.each do |photo| %>
  <div class="gallery-container"data-toggle="modal" data-target=".bd-example-modal-xl">
    <%= cl_image_tag photo.key, height: 100, width: 100, crop: :fill %>
  </div>
  <% end %>
</div>



<div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% gallery.photos.first(1).each_with_index do |photo, index| %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="active"></li>
          <% end %>
          <% gallery.photos.drop(1).each_with_index do |photo, index| %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= index + 1 %>"></li>
          <% end %>
        </ol>
        <div class="carousel-inner">
          <% gallery.photos.first(1).each do |photo| %>
          <div class="carousel-item active">
            <%= cl_image_tag photo.key %>
          </div>
          <% end %>
          <% gallery.photos.drop(1).each do |photo| %>
          <div class="carousel-item">
            <%= cl_image_tag photo.key %>
          </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .gallery-container{

    display: flex;
  }
  .gallery-container img {

    border: 5px solid green;
  }
</style>
