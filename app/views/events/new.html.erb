<%= render 'shared/main_navbar' %>
<% if current_user.admin? %>
<div class="container p-5 mt-5">
  <h1>Events#new</h1>

  <%= simple_form_for(@event) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :date %>
  <%= f.input :time %>
  <%= f.input :photo %>
  <%= f.submit class: 'btn btn-primary btn-lg btn-block'%>
  <% end %>
</div>
<% else %>
<%= render 'shared/denied' %>
<% end %>
