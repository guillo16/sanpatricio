<%= render 'shared/main_navbar' %>
<div class="banner-articles" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(https://res.cloudinary.com/dw7ox75dg/image/upload/v1585229626/casa_historica_secundario.jpg);">
 <h2>NOTICIAS</h2>
</div>
<div class="articles-navbar mb-3">
  <% @divisions.each do |division| %>
  <h2><%= link_to division.title.upcase,division_path(division) %></h2>
  <% end %>
  <h2><%= link_to 'TODAS', articles_path %></h2>
</div>
<div class="article-container">
  <% @articles.take(2).each do |article| %>
  <%= render 'cards/article_card', article: article %>
  <% end %>
</div>
<div class="article-container-2">
  <% @articles.drop(2).each do |article| %>
  <%= render 'cards/article_card', article: article %>
  <% end %>
</div>
