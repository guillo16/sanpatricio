<div class="login-wrapper">
  <div class="login-navbar">
    <%= link_to root_path do  %>
    <img src="https://res.cloudinary.com/dw7ox75dg/image/upload/v1585140067/san_patricio_logo.png" alt="">
    <% end %>
  </div>
  <div class="login-container">
    <div class="text-center">
      <hr class="hr-text" data-content="Iniciar sesíon">
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <p>Email</p>
      <%= f.input :email, input_html: { class: "form-control form-control"}, label: false, placeholder: "nombre@mail.com" %>
      <p>Contraseña</p>
      <%= f.input :password,
      label: false,
      input_html: { autocomplete: "current-password" } %>
      <div class="remember d-flex justify-content-between">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end %>
      </div>
    </div>

    <div class="form-actions mt-1">
      <%= f.button :submit, "Ingresar", class: 'btn btn-green btn-block' %>
    </div>
    <% end %>
    <div class="text-center mt-3">
      <p>No tienes cuenta? <%= render "devise/shared/links" %></p>
    </div>

  </div>






</div>



