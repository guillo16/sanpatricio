<div class="article-card">
  <%= link_to article_path(article) do %>
  <%= cl_image_tag article.photo.key %>
  <div class="article-content">
    <p><%= article.division.title.upcase %></p>
    <h2><%= article.title %></h2>
  </div>
  <% end %>
  <% if current_user.admin? %>
  <div class=" p-5">
    <%= link_to 'Editar Noticia', edit_article_path(article), class: 'btn btn-warning btn-block' %>
    <br>
    <%= link_to 'Eliminar Noticia',  article,  method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-block' %>
    <% else %>
    <% end %>
  </div>
</div>
